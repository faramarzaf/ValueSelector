<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <com.faraaf.tictacdev.valueselector.ValueSelector
        android:id="@+id/val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:actionDownColor="#73D10F"
        app:borderColor="@color/colorPrimary"
        app:borderRadius="1"
        app:borderThickness="1"
        app:gapValue="2"
        app:iconTypes="circle"
        app:invertIconsPlace="True"
        app:maxValue="100"
        app:minValue="-100"
        app:minusBtnColor="#C01C1C"
        app:minusIconHeightSize="30dp"
        app:minusIconWidthSize="30dp"
        app:plusBtnColor="#1C58C0"
        app:plusIconHeightSize="30dp"
        app:plusIconWidthSize="30dp"
        app:startValue="1"
        app:updateInterval="10"
        app:valueColor="#345"
        app:valueTextSize="15sp" />

    <com.faramarz.tictacdev.mycustomcounter.TestValueSelector
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:testminusIconHeightSize="30dp"
        app:testminusIconWidthSize="30dp"
        app:testplusIconHeightSize="30dp"
        app:testplusIconWidthSize="30dp"
        app:testactionDownColor="#73D10F"
        app:testminusBtnColor="#5262CA"
        app:testplusBtnColor="#FF0000"
        app:testiconTypes="circle"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Get value" />


</LinearLayout>