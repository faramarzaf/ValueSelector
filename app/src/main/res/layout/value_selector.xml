<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/parentView"
    android:background="@drawable/bg_selector"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/btn_minus"
        android:layout_width="@dimen/valueselector_button_wh"
        android:layout_height="@dimen/valueselector_button_wh"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/valueselector_margin_left_right"
        android:layout_marginTop="@dimen/valueselector_margin_top_bottom"
        android:layout_marginRight="@dimen/valueselector_margin_left_right"
        android:layout_marginBottom="@dimen/valueselector_margin_top_bottom"
        android:src="@drawable/ic_minus"

        app:srcCompat="@drawable/ic_minus" />

    <TextView
        android:id="@+id/value_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:maxWidth="30dp"
        android:minWidth="24dp"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/btn_plus"
        android:layout_width="@dimen/valueselector_button_wh"
        android:layout_height="@dimen/valueselector_button_wh"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/valueselector_margin_left_right"
        android:layout_marginTop="@dimen/valueselector_margin_top_bottom"
        android:layout_marginRight="@dimen/valueselector_margin_left_right"
        android:layout_marginBottom="@dimen/valueselector_margin_top_bottom"
        android:src="@drawable/ic_plus"
        app:srcCompat="@drawable/ic_plus"

        />


</LinearLayout>